---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import BannerImage from "../assets/home-page-banner.jpg";
---

<Layout>
  <div class="relative">
    <Image
      draggable="false"
      src={BannerImage}
      alt="Kingfisher"
      width={2022}
      height={702}
      class="w-full h-[400px] object-cover object-center select-none"
    />
    <div
      class="absolute top-0 right-0 bottom-0 left-0 bg-gradient-to-b from-transparent to-zinc-900"
    >
    </div>
  </div>
  <article class="relative w-4/5 lg:w-[1000px] mx-auto">
    <div class="flex flex-col-reverse -mt-20">
      <h1 class="font-alt font-light text-zinc-50 text-4xl sm:text-5xl md:text-6xl lg:text-[64px] tracking-wider leading-tight sm:leading-tight md:leading-tight lg:leading-tight">
        JOHNATHAN<br />VERSTRAATEN
      </h1>
      <h2 class="font-alt text-teal-400 text-base sm:text-lg md:text-xl">Wildlife Photographer</h2>
    </div>
  </article>
</Layout>
